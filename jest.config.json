{
    "verbose": true,
    "collectCoverage": false,
    "colors": true,
    "coverageReporters": [
        "lcov",
        "json"
    ],
    "collectCoverageFrom": [
        "**/src/**"
    ],
    "transform": {
        "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
    "moduleFileExtensions": [
        "ts",
        "js",
        "json",
        "node"
    ]
}